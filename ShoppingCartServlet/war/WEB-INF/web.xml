<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>AddProductsServlet</servlet-name>
    <servlet-class>com.shoppingCart.AddProductsServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>AddProductsServlet</servlet-name>
    <url-pattern>/AddProductsServlet</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>DeleteProductsServlet</servlet-name>
    <servlet-class>com.shoppingCart.DeleteProductsServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>DeleteProductsServlet</servlet-name>
    <url-pattern>/DeleteProductsServlet</url-pattern>
  </servlet-mapping>
   
  <servlet>
    <servlet-name>RetrieveProductsServlet  </servlet-name>
    <servlet-class>com.shoppingCart.RetrieveProductsServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>RetrieveProductsServlet</servlet-name>
    <url-pattern>/RetrieveProductsServlet</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>ViewProductsServlet  </servlet-name>
    <servlet-class>com.shoppingCart.ViewProductsServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ViewProductsServlet</servlet-name>
    <url-pattern>/ViewProductsServlet</url-pattern>
  </servlet-mapping>
 
  <servlet>
    <servlet-name> AddProductToCartServlet </servlet-name>
    <servlet-class>com.shoppingCart.AddProductToCartServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>AddProductToCartServlet</servlet-name>
    <url-pattern>/AddProductToCartServlet</url-pattern>
  </servlet-mapping>
 
   
  
  
  <!-- Default page to serve -->
 <welcome-file-list>
 <welcome-file>Index.html</welcome-file>
 </welcome-file-list>

</web-app>
